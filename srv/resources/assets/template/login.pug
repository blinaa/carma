doctype html
html
  head
    meta(charset='utf-8')
    title Вход в систему
    link(rel='stylesheet', href='/s/3p/normalize-css/normalize.css')
    script(src='/s/3p/bootstrap/js/bootstrap.min.js')

    link(rel='stylesheet', href='/s/css/style.css')
    script(src='/s/3p/jquery.js')
    script(src='/s/3p/jquery.browser.min.js')

    script(type='text/javascript').
      $(function() {
        $(".field").first().focus();
        var msg = "<div class='span6 offset2'>                      \
          Рекомендуется использовать браузер <b>Google Chrome</b>   \
          версии не ниже <b>50</b>. При работе с другими браузерами \
          функциональность может быть ограничена.                   \
        </div>";
        if (!($.browser.webkit && $.browser.versionNumber >= 50)) {
          $("#browser-msg").html(msg);
        }
      })
  body
    .row
      .col-md-4
      .box.col-md-4#loginblock
        #loginlogo
          img(src='/s/img/logo.png', alt='')
        form.form-horizontal(action='/login/', method='POST')
          fieldset
            legend Вход в систему
            .form-group
              label.control-label.col-sm-4 Имя пользователя
              .col-sm-8
                input.field.form-control(type='text', name='login')
            .form-group
              label.control-label.col-sm-4 Пароль
              .col-sm-8
                input.field.form-control(type='password', name='password')
            .form-group
              .col-sm-offset-4.col.sm-8
                .checkbox
                  label
                    input.field(type='checkbox', name='remember')
                    | Запомнить меня
            .form-group
              .col-sm-offset-4.col.sm-8
                button.btn.btn-large.btn-success(type='submit') Войти
        .box#browser-msg
