mixin dateField(fieldName)
  .input-group.input-group-sm.date&attributes(attributes)
    input.form-control(type="text" autocomplete="off" data-bind=`
      datepicker: true,
      value: ${fieldName},
      valueUpdate: ['change', 'afterkeydown'],
    `)
    span.input-group-addon
      span.glyphicon.glyphicon-calendar

.row
  .col-md-6
    .row
      h3 Фильтрация
    .row.col-md-6.form-horizontal
      each v, i in { 'city-select': "Город:", 'program-select': "Программа:", 'partner-select': "Партнёр:" }
        .form-group
          label.col-md-4= v
          .col-md-8
            select.form-control(id=i data-bind='foreach: $data')
              option(data-bind='value: id, text: name')
  .col-md-6
    .row
      h3 Интервал
    .row.col-md-6.form-horizontal
      .form-group
        +dateField('dateFrom')#rkc-date-from
      .form-group
        +dateField('dateTo')#rkc-date-to
      .form-group
        button#reload.btn Обновить
