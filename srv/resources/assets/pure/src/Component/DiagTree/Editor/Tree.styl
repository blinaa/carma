name = diag-tree-editor-tree

{name}
  pad = 10px
  depth-padding = 16px

  display block
  padding-right pad

  .{name}--dont-shift-levels
    padding 0 pad 0
    margin-top 0

  .{name}--folded-parents-menu
    padding 0 pad pad pad

  .{name}--more-elems
    padding 0 pad 5px
    color grey

  .{name}--list .{name}--item
    display block
    cursor pointer

    > .{name}--header
      position relative
      margin-left 9px

      &:before
        content ''
        display block
        position absolute
        left -4px
        top 0
        width 2px
        height 100%
        background rgba(255, 255, 255, 0)
        transform translateX(-100%)

        transition \
          width .3s ease-in-out,
          background-color .3s ease-in-out

      &:after
        content '📂'
        display inline-block
        position absolute
        left -12px
        top 0
        transform translateX(-100%)
        transition opacity .3s ease-in-out
        opacity 0

      .{name}--answer
        color grey

      .{name}--delete
        position absolute
        right 0
        top 50%
        transform translateY(-50%)
        padding 2px 5px 1px 4px
        cursor pointer
        opacity 0
        transition \
          opacity .3s ease-in-out,
          color .3s ease-in-out,
          background-color .3s ease-in-out

      &:hover .{name}--delete
        opacity 1

      .{name}--search-match
        background-color yellow

    &--selected
    &--parent-selected
      > .{name}--header:before
        background rgba(43, 149, 253, 1)

    &--selected > .{name}--header:before
      width 5px

    &:hover > .{name}--header:before
      background rgba(128, 128, 128, 0.5)

    &--selected
    &--parent-selected
      &:hover > .{name}--header:before
        background rgba(43, 149, 253, 0.5)

    &--leaf > .{name}--header:after
      content '🏁'
      opacity 1

    &--unfolded > .{name}--header:after
      opacity 1

    .{name}--children
      margin-left 16px
