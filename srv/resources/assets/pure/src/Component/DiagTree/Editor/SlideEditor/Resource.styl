name = DiagTreeEditorSlideEditorResource

.{name}
  display block
  position relative
  border none
  padding 0 8px
  margin 2px
  outline 1px dashed rgba(255, 255, 255, 0)
  transition outline-color .3s ease-in-out

  .{name}--wrap
    border none

  .{name}--buttons
    transition opacity .3s ease-in-out
    opacity 0
    position absolute
    right 10px
    top 50%
    transform translateY(-50%)

  &:hover
    outline-color silver

    .{name}--buttons
      opacity 1

  .{name}--image
    margin-right 10px
    max-width 30%

  .{name}--edit-image-wrap > .{name}--image
    margin 10px

  .{name}--deprecation-warning
    display block
