Name:                carma
Version:             0.1.0.1
Synopsis:            Call center assistance system
Description:         Project Description Here
License:             AllRightsReserved
Author:              Formal Methods
Maintainer:          maintainer@example.com
Stability:           Experimental
Category:            Web
Build-type:          Simple
Cabal-version:       >=1.6

Flag development
  Description: Whether to build the server in development (interpreted) mode
  Default: False

Executable carma
  hs-source-dirs: src
  main-is: Main.hs

  Other-modules:
    Application,
    ApplicationInit,
    ApplicationHandlers,
    AppHandlers.Util,
    AppHandlers.ActionAssignment,
    AppHandlers.CustomSearches,
    Nominatim,
    Snaplet.DbLayer,
    Snaplet.DbLayer.RedisCRUD,
    Snaplet.DbLayer.PostgresCRUD,
    Snaplet.DbLayer.ARC,
    Snaplet.DbLayer.RKC,
    Snaplet.DbLayer.Dictionary,
    Snaplet.DbLayer.Triggers,
    Snaplet.DbLayer.Triggers.Actions,
    Snaplet.DbLayer.Triggers.Defaults,
    Snaplet.DbLayer.Triggers.Dsl,
    Snaplet.DbLayer.Triggers.Types,
    Snaplet.DbLayer.Types,
    Snaplet.SiteConfig,
    Snaplet.SiteConfig.Class,
    Snaplet.SiteConfig.Dictionaries,
    Snaplet.SiteConfig.Types,
    Snaplet.SiteConfig.Models,
    Snaplet.SiteConfig.Permissions,
    Snaplet.FileUpload,
    Snaplet.Geo,
    Snaplet.Auth.Class,
    Utils.HttpErrors,
    Util

  Build-depends:
    aeson                       == 0.6.*,
    attoparsec                  == 0.10.*,
    base                        >= 4 && < 5,
    bytestring                  >= 0.9.1 && < 0.11,
    bytestring-lexing           == 0.4.*,
    carma-sync                  >= 0.1.2.3 && < 0.2,
    configurator                == 0.2.*,
    containers                  == 0.5.*,
    data-lens                   >= 2.0.1 && < 2.11,
    data-lens-template          >= 2.1 && < 2.2,
    directory                   == 1.2.*,
    easy-file                   == 0.1.*,
    fdds                        >= 0.1.0.1 && < 0.2,
    filepath                    == 1.3.*,
    hedis                       == 0.6.*,
    heist                       == 0.8.*,
    HTTP                        == 4000.2.*,
    MonadCatchIO-transformers   >= 0.2 && < 0.4,
    mtl                         == 2.1.*,
    network                     == 2.3.*,
    old-locale                  == 1.0.*,
    postgresql-simple           == 0.2.*,
    postgresql-sync-map         >= 0.3.1.1 && < 0.4,
    resource-pool-catchio       >= 0.2 && < 0.3,
    simple-log                  == 0.2.*,
    simple-log-syslog           >= 0.1.1,
    snap                        == 0.9.*,
    snap-core                   == 0.9.*,
    snap-loader-static          >= 0.9.0.1 && < 0.10,
    snap-server                 == 0.9.*,
    snaplet-postgresql-simple   >= 0.2.2 && < 0.3,
    snaplet-redis               == 0.1.*,
    snaplet-simple-log          == 0.2.*,
    stm                         == 2.4.*,
    text                        >= 0.11 && < 0.12,
    time                        >= 1.1 && < 1.5,
    transformers                >= 0.2 && < 0.4,
    unordered-containers,
    utf8-string,
    vector                      == 0.10.*,
    vin-parser                  == 0.1.7.1,
    weather-api                 >= 0.4.1,
    xlsx                        >= 0.0.2.1 && < 0.1

  Extensions:
    OverloadedStrings,
    RecordWildCards,
    NamedFieldPuns

  if flag(development)
    build-depends:
      snap-loader-dynamic >= 0.9.0.1 && < 0.10
    cpp-options: -DDEVELOPMENT
    ghc-options: -threaded -w
  else
    ghc-options: -threaded -Wall -fwarn-tabs -funbox-strict-fields -O2

